@model NV.Tax.SST.Gateway.MVC.Models.AdministrationModel
<div class="middle">
    @using (Html.BeginForm("CreateUser", "Administration", FormMethod.Post, new { @class = "form-horizontal row", role = "form" }))
    {
        <div class="form-group">
            <p><h2><strong>New User Registration Form</strong></h2>
            This new form helps you to create and assign appropriate privileges to the new 
            users with ease. 
            </p>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "form-label col-md-2"})
            @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control col-md-4", id = "t_first_name" })
        </div>
        
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "form-label col-md-2" })
            @Html.TextBoxFor(m => m.LastName, new { @class = "form-control col-md-8", id = "t_last_name" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.UserName, new { @class = "form-label col-md-2" })
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control col-md-8", id = "t_username" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "form-label col-md-2" })
            @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-8" })
        </div>
        <div class="form-group text-left">
            @Html.LabelFor(m => m.EmailAddress, new { @class = "form-label col-md-2" })
            @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control col-md-8" })
        </div>
        <div class="form-group">
            <label class="form-label col-md-2">Process Type</label>
            <select class="form-control ui-selectable-helper col-md-2">
                <option selected>Select One</option>
                <option>Processor</option>
                <option>Both</option>
            </select>
        </div>
        <div class="form-group">
            <button type="button" class="btn btn-primary btn-lg col-md-7" id="submit" 
                    name="submit" data-toggle="modal" data-target="#myModal">Register User</button>
        </div>
    <div class="modal fade" id="myModal">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title">User Registration Form</h4>
                </div>
                <div class="modal-body">
                    <p>Do you want to add roles to this account?</p>
                </div>
                <div class="modal-footer">
                    @Ajax.ActionLink("Yes", "CreateRole", "Administration", new { id = "test" }, 
                    new AjaxOptions { HttpMethod = "POST" }, new { @class = "btn btn-primary", id = "btnYes" })
                    @Ajax.ActionLink("No", "CreateUser", "Administration", null, new AjaxOptions { HttpMethod = "POST", OnSuccess = Request["Username"] },
                        new { @class = "btn btn-default", id = "btnNo" })
                </div>
            </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
    }
    
</div>
<h3>@ViewBag.Message</h3>
