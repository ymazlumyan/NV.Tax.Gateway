@{
    ViewBag.Title = "Manager";
}
@model NV.Tax.SST.Gateway.MVC.Models.AdministrationModel
<div class="x-form-wrapper">
    <div class="x-form-title">
        <h3><strong>User Management</strong></h3>
    </div>
    <div class="x-form-body">
        <table class="table table-striped table-bordered">
            <tr style="background: #888">
                <td width="15%"><strong>Username</strong></td>
                <td width="20%"><strong>Process Type</strong></td>
                <td width="10%"><strong>Auto Managed</strong></td>
                <td width="10%"><strong>Actions</strong></td>
            </tr>
                @{
                    NV.Tax.SST.Gateway.DB.Entities.sstpEntities db = new NV.Tax.SST.Gateway.DB.Entities.sstpEntities();
                    var data = from m in db.users
                               select m;
                    
                    foreach(var item in data)
                    {
                        <tr style="padding: 10px;border-bottom: 1px solid #000">
                            <td>
                            @item.username.ToString()
                            </td>
                            @if (item.processtype.ToString() == "B") 
                            { 
                                <td>Both</td>
                            }
                            else 
                            { 
                                <td>Processed</td>
                            }
                            @if (item.automanage == true)
                            {
                                <td><input type="checkbox" checked="checked" /></td>
                            }
                            else
                            {
                                <td><input type="checkbox" /></td>
                            }   
                            <td>
                                <ul class="nav">
                                    <li><a href="#" data-toggle="dropdown" class="dropdown-toggle">
                                        <div class="glyphicon glyphicon-cog"></div>Action</a>
                                        <ul class="dropdown-menu">
                                            <li><a href="/Administration/EditUser/@item.username.ToString()">Edit User</a></li>
                                            <li><a href="#" data-toggle="modal" data-target="#PasswordChangeModal">Change Password</a></li>
                                            <li><a href="#" data-toggle="modal" data-target="#RemoveUserModal">Remove User</a></li>
                                            <li><a href="/Administration/Role_Management/@item.username.ToString()">Role Management</a></li>
                                        </ul>
                                    </li>
                                </ul>
                            </td>                         
                        </tr>
                        <!-- Modal Dialog box for Removing Username -->
                        <div class="modal fade" id="RemoveUserModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                        <h4 class="modal-title" id="myModalLabel">SST Gateway - Username Removing</h4>
                                    </div>
                                    <div class="modal-body">
                                        Are you sure you want to remove user <strong>@item.username.ToString()</strong>?
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-success" data-dismiss="modal">Cancel</button>
                                        <a href="/Administration/RemoveUser/@item.username.ToString()" class="btn btn-danger">Remove</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- Modal Dialog box for Password Change -->
                        <div class="modal fade" id="PasswordChangeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                            <div class="modal-dialog" role="document">
                                <div class="modal-content">
                                    @using (Html.BeginForm("ChangePassword", "Administration", FormMethod.Post))
                                    {
                                        <div class="modal-header">
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                                            <h4 class="modal-title" id="myModalLabel">SST Gateway - Password Change for <strong>@item.username</strong></h4>
                                        </div>
                                        <div class="modal-body row">
                                            <div class="hidden" id="id" name="id">@item.username.ToString()</div>
                                            <div class="form-group" style="left:0">
                                                @Html.Label("New Password", new { @class = "label-control col-md-3" })
                                                @Html.Password("Password", null, new { @class = "form-control col-md-8", autofocus = "" })
                                            </div><br />
                                            <div class="form-group" style="left:0">
                                                @Html.Label("Confirm Password", new { @class = "label-control col-md-3" })
                                                @Html.Password("ConfirmPassword", null, new { @class = "form-control col-md-8" })
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                                            <button type="submit" class="btn btn-info">Submit</button>
                                        </div>
                                    }
                                    
                                </div>
                            </div>
                        </div>
                    }
}
        </table>
    </div>
</div>

